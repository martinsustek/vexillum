*
  margin 0
  padding 0

html
  height 100%
  font-size 62.5% 

body
  background #f1f1f1
  font-size 1.6rem
  padding 1rem
  font-family Georgia, serif 

article
main
aside
  display block
  
.wrapper
  width 970px
  margin 0 auto
  
  &__side
    display inline-block
    vertical-align top
    width 15%
    position relative
  
  &__main
    vertical-align top
    display inline-block
    width 85%
  
  &__block
    margin-bottom 3rem
  
  &__title
    margin 1rem 0 2rem
    font-weight 300
    font-size 2.7rem   

.block
  width 33%
  display inline-block
  vertical-align top
  text-align center
  margin-bottom 2rem 
  
  &__title
    font-weight 300
    font-size 2rem
    margin-bottom 1rem
  
  &__flag
    margin 0 auto 
  
  &__class
    font-size 1.6rem
    margin 1rem 0

.navigator
  //margin-left 2rem
  position fixed
  
  &__li
    margin 1rem 0  


@import 'index'